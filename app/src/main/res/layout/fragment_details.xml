<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailsFragment"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/local_fire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold">
            </TextView>

            <ImageView
                android:id="@+id/foto_fire"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:contentDescription="@string/foto_detalhe"
                android:src="@drawable/sem_foto"
                android:background="@color/white">
            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/aereos"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/aereos"
                    android:src="@drawable/plane"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:text="@string/aereos"
                    android:textAlignment="center"
                    android:layout_gravity="center">
                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/aereos_numero"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:text=""
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textStyle="bold">
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/operacionais"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/operacionais"
                    android:src="@drawable/firefighter"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="@string/operacionais"
                    android:textAlignment="center"
                    android:layout_gravity="center">
                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/operacionais_numero"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:text=""
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textStyle="bold">
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/veiculos"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/veiculos"
                    android:src="@drawable/car"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:text="@string/veiculos"
                    android:textAlignment="center"
                    android:layout_gravity="center">
                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/veiculos_numero"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:text=""
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textStyle="bold">
            </TextView>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/data"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/data"
            android:src="@drawable/calendario"/>

        <TextView
            android:id="@+id/data_fire"
            android:layout_width="125dp"
            android:layout_height="25dp"
            android:text=""
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold">
        </TextView>

        <ImageView
            android:id="@+id/hora"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/hora"
            android:src="@drawable/relogio"/>

        <TextView
            android:id="@+id/hora_fire"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text=""
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/estado"
            android:textSize="20sp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold">
        </TextView>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/obs"
                android:textSize="20sp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/obs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold">
            </TextView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>